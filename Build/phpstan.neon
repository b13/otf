      message: "#^Cannot call method execute\\(\\) on Doctrine\\\\DBAL\\\\Driver\\\\ResultStatement\\|int\\.$#"
      count: 1
      path: %currentWorkingDirectory%/Classes/Evaluation/UniqueEvaluation.php
